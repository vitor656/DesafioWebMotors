@model AnuncioWebMotorViewModel

@{
    ViewData["Title"] = "Anúncios WebMotor - Cadastro";
}

<h3>Cadastro de Anúncio</h3>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Marca"></label>
        <select id="marca" class="form-select" asp-for="Marca"
            asp-items='@(new SelectList(ViewBag.makes, "Name", "Name"))' onchange="obterModelos()"></select>
    </div>
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <select id="modelo" class="form-select" asp-for="Modelo" onchange="obterVersions()"></select>
    </div>
    <div class="form-group">
        <label asp-for="Versao"></label>
        <select id="version" class="form-select" asp-for="Versao"></select>
    </div>
    <div class="form-group">
        <label asp-for="Ano"></label>
        <input asp-for="Ano" class="form-control" placeholder="Informe a marca">
    </div>
    <div class="form-group">
        <label asp-for="Quilometragem"></label>
        <input asp-for="Quilometragem" class="form-control" placeholder="Informe a quilometragem">
    </div>
    <div class="form-group">
        <label asp-for="Observacao"></label>
        <input asp-for="Observacao" class="form-control" placeholder="Informe a observação" maxlength="16">
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary">
</form>

@section scripts {
<script src='@Url.Content("~/js/makesModelsVersions.js")'></script>
}
